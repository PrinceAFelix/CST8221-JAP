<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane id="AnchorPane" prefHeight="200" prefWidth="320" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="metricconverterfx.FXMLDocumentController">
    <children>
        <Button fx:id="button" layoutX="46.0" layoutY="113.0" onAction="#handleButtonAction" prefHeight="25.0" prefWidth="115.0" text="Convert" />
        <Label fx:id="outputLabel" layoutX="206.0" layoutY="117.0" minHeight="16" minWidth="69" text="Miles" />
      <TextField fx:id="textFieldKm" alignment="CENTER_RIGHT" layoutX="46.0" layoutY="63.0" prefHeight="25.0" prefWidth="115.0" promptText="Enter kilometers" />
      <Label fx:id="fixedTextLabel" layoutX="206.0" layoutY="67.0" text="Kilometers" />
      <MenuButton fx:id="menu" alignment="CENTER" contentDisplay="CENTER" layoutX="-1.0" mnemonicParsing="false" onAction="#menuButtonAction" prefHeight="25.0" prefWidth="321.0" text="Kilometers to Miles" textAlignment="CENTER" textFill="#3900ff">
        <items>
          <MenuItem fx:id="milesConverter" mnemonicParsing="false" onAction="#menuButtonAction" text="Kilometers to Miles" />
          <MenuItem fx:id="metersConverter" mnemonicParsing="false" onAction="#menuButtonAction" text="Meters to Yards" />
        </items>
      </MenuButton>
    </children>
</AnchorPane>
